{
    "name": "iot-sim-metrics-service",
    "description": "The metrics microservice for the iot device simulator",
    "main": "index.js",
    "license": "Apache 2.0",
    "version": "2.1.1",
    "private": "true",
    "dependencies": {
        "authorizer": "file:../../resources/authorizer/",
        "logger": "file:../../resources/logger/",
        "moment": "*",
        "randomstring": "*",
        "underscore": "*"
    },
    "devDependencies": {
        "aws-sdk": "*",
        "aws-sdk-mock": "*",
        "chai": "*",
        "mocha": "*",
        "proxyquire": "*",
        "sinon": "*",
        "sinon-chai": "*"
    },
    "scripts": {
        "pretest": "rm -rf package-lock.json && rm -rf node_modules && npm install",
        "test": "mocha lib/*.spec.js",
        "prestart": "rm -rf package-lock.json && npm install",
        "start": "node index.js",
        "build:init": "rm -rf package-lock.json && rm -rf dist && rm -rf node_modules",
        "build:zip": "zip -rq iot-sim-metrics-service.zip . -x template.yml",
        "build:dist": "mkdir dist && mv iot-sim-metrics-service.zip dist/",
        "build": "npm run build:init && npm install --production && npm run build:zip && npm run build:dist",
        "local:api": "sam local start-api --env-vars ../tests/env-vars.json"
    },
    "bundleDependencies": [
        "moment",
        "underscore",
        "colors"
    ]
}
